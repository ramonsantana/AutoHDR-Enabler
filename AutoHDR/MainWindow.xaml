<Window x:Class="AutoHDREnabler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto HDR Enabler" Height="400" Width="600">
    <Grid>
        <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10" Padding="5">
            <Grid>
                <!-- Browse button -->
                <Button Name="BrowseButton" Content="Select the file" Margin="10,30,0,0" VerticalAlignment="Top" Click="BrowseButton_Click" />

                <!-- Path input -->
                <Label Content="Selected File:" Margin="10,70,0,0" VerticalAlignment="Top" />
                <TextBox Name="PathTextBox" Margin="10,90,10,0" VerticalAlignment="Top" />

                <!-- Create Registry Entry button -->
                <Button Name="CreateRegistryButton" Content="Create Registry Entry" Margin="10,130,0,0" VerticalAlignment="Top" Click="CreateRegistryButton_Click" />

                <!-- Enable 10-bit CheckBox -->
                <CheckBox Name="Enable10BitCheckBox" Content="Enable 10-bit" Margin="10,160,0,0" VerticalAlignment="Top" />

                <!-- Output text box -->
                <TextBlock Name="OutputTextBlock" Margin="10,190,10,10" VerticalAlignment="Top" TextWrapping="Wrap" />
            </Grid>
        </Border>
    </Grid>
</Window>
